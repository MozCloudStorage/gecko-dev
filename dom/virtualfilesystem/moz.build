DIRS += [
    'interfaces',
]

EXPORTS.mozilla.dom += [
    'FakeVirtualFileSystemService.h',
    'FileSystemProvider.h',
    'FileSystemProviderAbortEvent.h',
    'FileSystemProviderCloseFileEvent.h',
    'FileSystemProviderEvent.h',
    'FileSystemProviderGetMetadataEvent.h',
    'FileSystemProviderOpenFileEvent.h',
    'FileSystemProviderReadDirectoryEvent.h',
    'FileSystemProviderReadFileEvent.h',
    'FileSystemProviderUnmountEvent.h',
    'VirtualFileSystemServiceFactory.h',
]

UNIFIED_SOURCES += [
    'FakeVirtualFileSystemService.cpp',
    'FileSystemProvider.cpp',
    'FileSystemProviderAbortEvent.cpp',
    'FileSystemProviderCloseFileEvent.cpp',
    'FileSystemProviderEvent.cpp',
    'FileSystemProviderGetMetadataEvent.cpp',
    'FileSystemProviderOpenFileEvent.cpp',
    'FileSystemProviderReadDirectoryEvent.cpp',
    'FileSystemProviderReadFileEvent.cpp',
    'FileSystemProviderUnmountEvent.cpp',
    'nsVirtualFileSystemCallback.cpp',
    'nsVirtualFileSystemDataType.cpp',
    'nsVirtualFileSystemRequestManager.cpp',
    'nsVirtualFileSystemRequestValue.cpp',
    'VirtualFileSystemModule.cpp',
    'VirtualFileSystemServiceFactory.cpp',
]

if CONFIG['MOZ_WIDGET_TOOLKIT'] == 'gonk':
    DIRS += [
        'fuse',
    ]

    LOCAL_INCLUDES += [
        '/dom/virtualfilesystem/fuse',
    ]

    UNIFIED_SOURCES += [
        'nsVirtualFileSystem.cpp',
        'nsVirtualFileSystemService.cpp',
    ]

include('/ipc/chromium/chromium-config.mozbuild')

MOCHITEST_MANIFESTS += ['test/mochitest/mochitest.ini']

XPCSHELL_TESTS_MANIFESTS += ['test/xpcshell/xpcshell.ini']

FINAL_LIBRARY = 'xul'